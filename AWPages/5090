<tr class='row-0'><td class='big'>59.0</td><td class='big'><a href="#rapid101177">Highway 165 - Lander Ave</a></td><td class=big>N/A</td><td><img alt="Access " src="/resources/images/rapid_icon/rapid_icon_access.gif"></td></tr>
<tr class='row-1'><td class='big'>67.0</td><td class='big'><a href="#rapid101176">Fremont Ford State Rec Area</a></td><td class=big>N/A</td><td><img alt="Access " src="/resources/images/rapid_icon/rapid_icon_access.gif"></td></tr>
<tr class='row-0'><td class='big'>74.0</td><td class='big'><a href="#rapid101179">Merced River Confluence - Hills Ferry Road</a></td><td class=big>N/A</td><td><img alt="Takeout " src="/resources/images/rapid_icon/rapid_icon_takeout.gif"></td></tr>
